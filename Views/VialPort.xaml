<local:View x:Class="AeonHacs.Wpf.Views.VialPort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AeonHacs.Wpf.Views"
             mc:Ignorable="d">
    <Grid DataContext="{Binding Component, RelativeSource={RelativeSource AncestorType={x:Type local:VialPort}}}">
        <local:Valve VerticalAlignment="Center" HorizontalAlignment="Left" Component="{Binding Valve}"/>
        <Rectangle Style="{DynamicResource FittingShapeStyle}" Width="5" Height="7" Margin="18,0,0,0" HorizontalAlignment="Left" IsHitTestVisible="False"/>
        <local:FTC LayoutTransform="{DynamicResource Left}" Width="21" Height="21" HorizontalAlignment="Left" Margin="49,0,0,0" Component="{Binding Coldfinger}"/>
        <local:NeedlePort LayoutTransform="{DynamicResource Left}" VerticalAlignment="Center" Margin="22,0,0,0" IsHitTestVisible="False"/>
    </Grid>
</local:View>
